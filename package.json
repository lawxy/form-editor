{
  "name": "@bst/components",
  "version": "0.0.7",
  "description": "贝斯特前端组件库",
  "keywords": [
    "react",
    "@bst/components"
  ],
  "homepage": "http://137.168.102.216/code/frontend-business-pc",
  "bugs": {
    "url": "http://137.168.102.216/code/frontend-business-pc"
  },
  "repository": {
    "type": "gitlab",
    "url": "http://137.168.102.216/code/frontend-business-pc"
  },
  "license": "MIT",
  "sideEffects": [
    "es/**/style/*",
    "lib/**/style/*",
    "**/*.less"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "build": "father build",
    "build:watch": "father dev",
    "dev": "dumi dev",
    "docs:build": "dumi build",
    "doctor": "father doctor",
    "gc": "node ./scripts/commit",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:css": "stylelint \"{src,test}/**/*.{css,less}\"",
    "lint:es": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install && dumi setup",
    "prepublishOnly": "npm run build",
    "start": "npm run dev",
    "watch": "node ./scripts/watch",
    "pub": "node ./scripts/publish"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@types/styled-components": "^5.1.9",
    "ahooks": "^3.7.8",
    "immer": "^10.0.2",
    "lodash-es": "^4.17.21",
    "mobx": "^6.10.0",
    "mobx-react-lite": "^4.0.3",
    "parse-json": "^7.0.0",
    "react-ace": "^10.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@umijs/lint": "^4.0.0",
    "antd": "^5.8.1",
    "axios": "^1.4.0",
    "chalk": "^4.1.2",
    "cross-spawn": "^7.0.3",
    "dumi": "^2.2.0",
    "eslint": "^8.23.0",
    "father": "^4.1.0",
    "father-build": "^1.22.5",
    "husky": "^8.0.1",
    "inquirer": "^8.2.6",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "stylelint": "^14.9.1"
  },
  "peerDependencies": {
    "antd": "^5.8.1",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "publishConfig": {
    "registry": "http://137.168.102.216:8081/repository/npm-hosted/"
  },
  "authors": []
}
